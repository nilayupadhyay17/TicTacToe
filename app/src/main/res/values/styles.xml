<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme.GameButton">
        <item name="android:background">@color/grid</item>
        <item name="android:onClick">mainGameButtonClick</item>
    </style>

    <style name="AppTheme.GameInfo">
        <item name="android:textColor">#ffababab</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">13sp</item>
    </style>


        <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Light.Dialog">

            <item name="android:textColor">#ffffff</item>
            <item name="android:typeface">monospace</item>
            <item name="android:textSize">20sp</item>
        </style>

</resources>
